<%- include("./partials/header") %>

<div id="login" class="container">
	<div class="row flex-column">
		<h1 style="text-align:center">Login</h1>
		<div id="loginform">
			<form action="/login" method="POST">
				<div class="form-group">
					<input id="username" class="form-control" type="text" name="username" placeholder="Username">
				</div>
				<div class="form-group">
					<input id="password" class="form-control" type="password" name="password" placeholder="Password">
				</div>
				<div class="form-group">
					<button class="form-control btn btn-primary btn-block" type="submit" value="Login!">Submit</button>
				</div>
				<a class="btn btn-outline-success text-center d-block" href="/register">Register if you don't have an account</a>
			</form>
			<a class="btn btn-info btn-block my-3" href="/campgrounds/page/1"><i class="fas fa-arrow-circle-left"></i> Go back</a>
		</div>
	</div>
</div>

<%- include("./partials/footer") %>