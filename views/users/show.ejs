<%- include("../partials/header") %>

<div class="row pt-5">
	<div class="col-md-4">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title"><%= user.username %></h4>
				<img class="card-img-top" src="<%= user.avatar %>" alt="user profile image">
				<h4 class="card-title pt-2"><%= user.firstName + " " + user.lastName %></h4>
				<p class="card-text"><%= user.email %></p>
				<hr>
				<em><p class="lead">Member since: <%= user.joinedAt.toDateString().split(' ').slice(1).join(' ') %></p></em>
			</div>
		</div>
	</div>
	<div class="col-md-8">
		<h2><%= user.username %>'s campgrounds:</h2>
		<hr>
		<ul>
			<% campgrounds.forEach(function(campground){ %>
				<li id="userCampList"><a href="/campgrounds/<%= campground._id %>"><%= campground.name %></a></li>
			<% }); %>
		</ul>
		<a class="btn btn-info my-3" href="/campgrounds/page/1"><i class="fas fa-arrow-circle-left"></i> Go back</a>
	</div>
</div>

<%- include("../partials/footer") %>